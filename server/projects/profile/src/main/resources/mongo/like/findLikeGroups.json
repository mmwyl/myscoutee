[
    {
        "$lookup": {
            "from": "profiles",
            "localField": "from.$id",
            "foreignField": "_id",
            "as": "profileFrom"
        }
    },
    {
        "$match": {
            "profileFrom.status": "A"
        }
    },
    {
        "$lookup": {
            "from": "profiles",
            "localField": "to.$id",
            "foreignField": "_id",
            "as": "profileTo"
        }
    },
    {
        "$match": {
            "profileTo.status": "A"
        }
    },
    {
        "$group": {
            "_id": "$cnt",
            "likes": {
                "$push": "$$ROOT"
            }
        }
    },
    {
        "$sort": {
            "_id": 1
        }
    }
]
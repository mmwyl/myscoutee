[
    {
        "$match": {
            "status": "P",
            "type": "A",
            "rule.priority": true
        }
    },
    {
        "$addFields": {
            "currentMembers": {
                "$filter": {
                    "input": "$members",
                    "as": "member",
                    "cond": {
                        "$eq": [
                            "$$member.status",
                            "A"
                        ]
                    }
                }
            },
            "validUntil": {
                "$dateSubtract": {
                    "startDate": {
                        "$toDate": "ISODate()"
                    },
                    "unit": "minute",
                    "amount": "$rule.eventGrace"
                }
            }
        }
    },
    {
        "$set": {
            "status": {
                "$cond": [
                    {
                        "$and": [
                            {
                                "$lt": [
                                    "$range.start",
                                    "$validUntil"
                                ]
                            },
                            {
                                "$lt": [
                                    {
                                        "$size": "$currentMembers"
                                    },
                                    "$capacity.min"
                                ]
                            }
                        ]
                    },
                    "T",
                    {
                        "$cond": [
                            {
                                "$or": [
                                    {
                                        "$and": [
                                            {
                                                "$lt": [
                                                    "$range.start",
                                                    "$validUntil"
                                                ]
                                            },
                                            {
                                                "$gte": [
                                                    {
                                                        "$size": "$currentMembers"
                                                    },
                                                    "$capacity.min"
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "$and": [
                                            {
                                                "$gte": [
                                                    "$range.start",
                                                    "$validUntil"
                                                ]
                                            },
                                            {
                                                "$eq": [
                                                    {
                                                        "$size": "$currentMembers"
                                                    },
                                                    "$capacity.max"
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            "A",
                            "P"
                        ]
                    }
                ]
            }
        }
    },
    {
        "$lookup": {
            "from": "events",
            "let": {
                "createdBy": "$createdBy",
                "currentEvent": "$$ROOT",
                "currentMembers": "$currentMembers"
            },
            "pipeline": [
                {
                    "$match": {
                        "$expr": {
                            "$and": [
                                {
                                    "$eq": [
                                        "$$currentEvent.status",
                                        "P"
                                    ]
                                },
                                {
                                    "$eq": [
                                        "$status",
                                        "A"
                                    ]
                                },
                                {
                                    "$eq": [
                                        "$$currentEvent.group",
                                        "$group"
                                    ]
                                },
                                {
                                    "$ne": [
                                        "$_id",
                                        "$$currentEvent._id"
                                    ]
                                },
                                {
                                    "$or": [
                                        {
                                            "$eq": [
                                                "$$currentEvent.rule.from",
                                                null
                                            ]
                                        },
                                        {
                                            "$and": [
                                                {
                                                    "$ne": [
                                                        "$$currentEvent.rule.from",
                                                        null
                                                    ]
                                                },
                                                {
                                                    "$gte": [
                                                        "$range.start",
                                                        "$$currentEvent.rule.from"
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "$in": [
                                        "$$createdBy",
                                        {
                                            "$map": {
                                                "input": {
                                                    "$filter": {
                                                        "input": "$members",
                                                        "as": "member",
                                                        "cond": {
                                                            "$in": [
                                                                "$$member.status",
                                                                [
                                                                    "A"
                                                                ]
                                                            ]
                                                        }
                                                    }
                                                },
                                                "as": "member",
                                                "in": "$$member.profile.$id"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                {
                    "$unwind": {
                        "path": "$members"
                    }
                },
                {
                    "$group": {
                        "_id": null,
                        "mergedMembers": {
                            "$addToSet": "$members"
                        }
                    }
                },
                {
                    "$lookup": {
                        "from": "events",
                        "let": {
                            "mergedMembers": "$mergedMembers",
                            "currentEvent": "$$currentEvent"
                        },
                        "pipeline": [
                            {
                                "$match": {
                                    "$expr": {
                                        "$and": [
                                            {
                                                "$eq": [
                                                    "$$currentEvent.rule.mutual",
                                                    true
                                                ]
                                            },
                                            {
                                                "$eq": [
                                                    "$$currentEvent.status",
                                                    "P"
                                                ]
                                            },
                                            {
                                                "$eq": [
                                                    "$status",
                                                    "A"
                                                ]
                                            },
                                            {
                                                "$eq": [
                                                    "$$currentEvent.group",
                                                    "$group"
                                                ]
                                            },
                                            {
                                                "$ne": [
                                                    "$_id",
                                                    "$$currentEvent._id"
                                                ]
                                            },
                                            {
                                                "$or": [
                                                    {
                                                        "$eq": [
                                                            "$$currentEvent.rule.from",
                                                            null
                                                        ]
                                                    },
                                                    {
                                                        "$and": [
                                                            {
                                                                "$ne": [
                                                                    "$$currentEvent.rule.from",
                                                                    null
                                                                ]
                                                            },
                                                            {
                                                                "$gte": [
                                                                    "$range.start",
                                                                    "$$currentEvent.rule.from"
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            },
                                            {
                                                "$gt": [
                                                    {
                                                        "$size": {
                                                            "$setIntersection": [
                                                                "$$mergedMembers.profile.$id",
                                                                {
                                                                    "$map": {
                                                                        "input": {
                                                                            "$filter": {
                                                                                "input": "$members",
                                                                                "as": "member",
                                                                                "cond": {
                                                                                    "$in": [
                                                                                        "$$member.status",
                                                                                        [
                                                                                            "A"
                                                                                        ]
                                                                                    ]
                                                                                }
                                                                            }
                                                                        },
                                                                        "as": "member",
                                                                        "in": "$$member.profile.$id"
                                                                    }
                                                                }
                                                            ]
                                                        }
                                                    },
                                                    0
                                                ]
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "$unwind": {
                                    "path": "$members"
                                }
                            },
                            {
                                "$group": {
                                    "_id": null,
                                    "mergedMembers": {
                                        "$addToSet": "$members"
                                    }
                                }
                            },
                            {
                                "$unwind": {
                                    "path": "$mergedMembers"
                                }
                            }
                        ],
                        "as": "mutual"
                    }
                },
                {
                    "$set": {
                        "members": {
                            "$cond": {
                                "if": {
                                    "$ne": [
                                        "$mutual.mergedMembers",
                                        []
                                    ]
                                },
                                "then": "$mutual.mergedMembers",
                                "else": "$mergedMembers"
                            }
                        }
                    }
                }
            ],
            "as": "candidates"
        }
    },
    {
        "$unwind": {
            "path": "$candidates",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "event": "$$ROOT",
                "candidates": "$candidates.members"
            }
        }
    }
]
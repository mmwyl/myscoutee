[
    {
        "$match": {
            "_id": ":#{#eventId}"
        }
    },
    {
        "$addFields": {
            "user": {
                "$first": {
                    "$filter": {
                        "input": "$members",
                        "as": "member",
                        "cond": {
                            "$and": [
                                {
                                    "$eq": [
                                        "$$member.profile.$id",
                                        "?#{#param.id}"
                                    ]
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    {
        "$unwind": {
            "path": "$members"
        }
    },
    {
        "$lookup": {
            "from": "likes",
            "let": {
                "p_id": "$members.profile.$id",
                "p_eventId": "$_id"
            },
            "pipeline": [
                {
                    "$match": {
                        "$expr": {
                            "$and": [
                                {
                                    "$eq": [
                                        "$from.$id",
                                        "$$p_id"
                                    ]
                                },
                                {
                                    "$eq": [
                                        "$ref",
                                        "$$p_eventId"
                                    ]
                                }
                            ]
                        }
                    }
                }
            ]
        }
    },
    {
        "$unwind": {
            "path": "$likes",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$addFields": {
            "score": {
                "$switch": {
                    "branches": [
                        {
                            "case": {
                                "$ne": [
                                    "$likes",
                                    null
                                ]
                            },
                            "then": "$likes.rate"
                        },
                        {
                            "case": {
                                "$ne": [
                                    {
                                        "$ifNull": [
                                            "$members.score",
                                            0
                                        ]
                                    },
                                    0
                                ]
                            },
                            "then": "$members.score"
                        }
                    ],
                    "default": 0
                }
            }
        }
    },
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$in": [
                            "$members.status",
                            ":#{#status}"
                        ]
                    },
                    {
                        "$or": [
                            {
                                "$gt": [
                                    "$members.status",
                                    "?#{#param.offset[0]}"
                                ]
                            },
                            {
                                "$and": [
                                    {
                                        "$eq": [
                                            "$members.status",
                                            "?#{#param.offset[0]}"
                                        ]
                                    },
                                    {
                                        "$or": [
                                            {
                                                "$lt": [
                                                    "$score",
                                                    "?#{#param.offset[1]}"
                                                ]
                                            },
                                            {
                                                "$and": [
                                                    {
                                                        "$eq": [
                                                            "$score",
                                                            "?#{#param.offset[1]}"
                                                        ]
                                                    },
                                                    {
                                                        "$gt": [
                                                            "$members.createdDate",
                                                            {
                                                                "$toDate": "?#{#param.offset[2]}"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    },
    {
        "$sort": {
            "members.status": 1,
            "score": -1,
            "members.createdDate": 1
        }
    },
    {
        "$limit": "?#{#param.limit}"
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                    {
                        "member": "$members"
                    },
                    {
                        "role": {
                            "$cond": [
                                {
                                    "$ifNull": [
                                        "$user",
                                        null
                                    ]
                                },
                                "$user.role",
                                null
                            ]
                        },
                        "rate": {
                            "$cond": [
                                {
                                    "$ifNull": [
                                        "$likes",
                                        null
                                    ]
                                },
                                "$likes.rate",
                                null
                            ]
                        },
                        "offset": [
                            "$members.status",
                            "$score",
                            "$members.createdDate"
                        ]
                    }
                ]
            }
        }
    }
]